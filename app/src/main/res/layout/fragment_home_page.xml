<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/colorForgive">

        <TextView
            android:id="@+id/userName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/moto_label"
            android:layout_marginTop="60dp"
            android:text="用户名:"
            android:textColor="#f8f8f8"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userName_label"
            android:layout_marginLeft="115dp"
            android:maxWidth="120dp"
            android:text="XuLw"
            android:textColor="#f8f8f8"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/moto_label"
            android:layout_marginTop="90dp"
            android:text="ID:"
            android:textColor="#f8f8f8"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_label"
            android:layout_marginLeft="105dp"
            android:maxWidth="130dp"
            android:text="3124124fdd"
            android:textColor="#f8f8f8"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/moto_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="120dp"
            android:text="个性签名:"
            android:textColor="#f8f8f8"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/moto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/moto_label"
            android:layout_marginLeft="105dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="150dp"
            android:text="黑马JAVA-一直被模仿-从未被超越。。。.."
            android:textColor="#f8f8f8"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/circle_shape"
            android:src="@mipmap/icon_head" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_moment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_moment_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_moment" />

        <TextView
            android:id="@+id/home_moment_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_moment_iconId"
            android:text="朋友圈"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_moment_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/red_circle_shape"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_friend_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_friend" />

        <TextView
            android:id="@+id/home_friend_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_friend_iconId"
            android:text="通讯录"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_friend_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_information_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_information" />

        <TextView
            android:id="@+id/home_information_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_information_iconId"
            android:text="我的资料"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_information_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_favorite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_favorite_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_favorite" />

        <TextView
            android:id="@+id/home_favorite_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_favorite_iconId"
            android:text="收藏"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_favorite_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_other_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:src="@mipmap/icon_other" />

        <TextView
            android:id="@+id/home_other_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_other_iconId"
            android:text="其他"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_other_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

</LinearLayout>